{
	"name": "spectracker",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start --filter=server --filter=web",
		"preview": "pnpm build && turbo preview --filter=server --filter=web",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @spectracker/db db:push",
		"db:studio": "turbo -F @spectracker/db db:studio",
		"db:generate": "turbo -F @spectracker/db db:generate",
		"db:migrate": "turbo -F @spectracker/db db:migrate",
		"db:local": "turbo -F @spectracker/db db:local",
		"check": "oxlint && oxfmt --write",
		"scrape:all": "node ./scripts/scrape-all.mjs",
		"clear:specs": "pnpm --filter @spectracker/db exec node ./scripts/clear-techpowerup-gpu-specs-queue.mjs",
		"scrape:gpu-specs": "pnpm --filter @spectracker/db exec node ./scripts/scrape-techpowerup-gpu-specs.mjs"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@spectracker/config": "workspace:*",
		"@types/bun": "catalog:",
		"oxfmt": "^0.32.0",
		"oxlint": "^1.47.0",
		"turbo": "^2.8.9",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.29.3"
}
